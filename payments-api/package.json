{
  "name": "payment-api",
  "version": "1.0.0",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "db:setup": "node db/setup.js",
    "db:init": "node db/init.js",
    "db:migrate": "node -e \"import('./db/migrations.js').then(m => m.migrateOrdersTables().then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); }))\"",
    "test:security": "node tests/security-verification.js",
    "test:integration": "node tests/integration.test.js",
    "test": "npm run test:security && npm run test:integration"
  },
  "dependencies": {
    "express": "^4.21.2",
    "dotenv": "^16.6.1",
    "cors": "^2.8.5",
    "uuid": "^9.0.0",
    "axios": "^1.4.0",
    "redis": "^4.6.13"
  }
}
